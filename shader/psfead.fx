#include	"psvscommon.fx"

//--------------------------------------------------------------------------------------
//  ピクセルシェーダー
//--------------------------------------------------------------------------------------
float4 main(VS_INPUT_ANIMETION input) : SV_Target
{
	float4 texcol = g_Tex.Sample(g_SamplerLinear, input.Tex);
	float alpha;
    alpha = Material.Ambient.x * 2 - texcol.r;

    return float4(0, 0, 0, alpha);
}
